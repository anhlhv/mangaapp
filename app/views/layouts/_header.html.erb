<header class="navbar main-nav">
  <div class="main-nav-inner" >
    <div class="container">
      <div class="head-container">
      <div class="head-logo">
        <%= link_to image_tag("http://nr1.upanh.com/b5.s31.d2/2cac164556aaa9ef5d0eb3fd89d5eb14_49521131.logo.gif"), root_path %>
      </div>
      <div class="head-search">
         <%= form_tag(search_mangas_path, :method=>'GET', :multipart => true, :class=>"navbar-search pull-left") do %>
          <%= text_field_tag "keyword" %>
        <% end %>
      </div>
      <div class="head-menu">
        <nav>
          <ul class="nav nav-pills pull-right">
            <li class="active"><%= link_to "Home",  root_path %></li>
            <li><%= link_to "List",   list_mangas_path %></li>
            <% if user_signed_in? %>
            <li class="dropdown">
              <a class="dropdown-toggle"
                 data-toggle="dropdown" href="#">
                  User
                  <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to('Profile', user_password_path) %></li>
                <li><%= link_to('Admin', panel_mangas_path) %></li>
                <li class="divider"></li>
                <li><%= link_to('Logout', destroy_user_session_path, :method => 'delete') %></li>
              </ul>
            </li>
            <% else %>
              <li><%= link_to "Sign up", new_user_registration_path %> </li>
              <li><a data-toggle="modal" href="#SigninDialog">Sign in</a></li>
              <%= render 'layouts/user_login_form' %>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>
</header>
