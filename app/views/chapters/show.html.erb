<% provide(:title,@chapter.manga.name) %>
<!-- AddThis Button BEGIN -->
<div class="addthis_toolbox addthis_floating_style addthis_counter_style" style="margin-left:-80px">
  <a class="addthis_button_facebook_like" fb:like:layout="box_count"></a>
  <a class="addthis_button_tweet" tw:count="vertical"></a>
  <a class="addthis_button_google_plusone" g:plusone:size="tall"></a>
  <a class="addthis_counter"></a>
</div>
<script type="text/javascript" src="http://s7.addthis.com/js/300/addthis_widget.js#pubid=xa-505aeceb26bbde13"></script>
<!-- AddThis Button END -->

    <div class="show-chapter-top">
      <div class="show-chapter-name"><%= @chapter.manga.name %> - Chapter <%= @chapter.index %></div>
      <div class="show-chapter-control">
        Chapter: 
        <select class="chonchapter" onchange="window.location='/chapters/'+this.value+'';">
          <% @list_index.each  do |c| %>
            <option value="<%= c.id %>" <% if c.index==@chapter.index %> selected <% end -%>><%= c.index %></option>
          <% end %>
        </select>
        <% if (@chapter.index - 1 >= 1) %>
          <a href="/chapters/<%= chapter_index(@chapter.index - 1) %>" class="btn">prev</a>
        <% end -%>
        <%  if (@chapter.index + 1 <= @list_chapter.last.index) %>
          <a href="/chapters/<%= chapter_index(@chapter.index + 1) %>" class="btn">next</a>
        <% end -%>
      </div>
    </div>
    <div class="row-fluid">
      <% if @album %>
          <% @album["feed"]["entry"].each_with_index do |image, index| %>
            <% url=image["media$group"]["media$thumbnail"][2]["url"] %>
            <% url.gsub!('http', 'https') %>
            <% url.gsub!('s288', 's1360') %>
            <% url.gsub!('ggpht', 'googleusercontent') %>
            <div class="page" align="center">
              <%= link_to image_tag(url), '#page'+ (index+1).to_s, id: "page#{index+1}", class: "manga-image", data: {index: index+1} %>
            </div>
          <% end %>
        <% end %>
    </div>

<div id='bttop'>TOP</div>
<script type='text/javascript'>$(function(){$(window).scroll(function(){if($(this).scrollTop()!=0){$('#bttop').fadeIn();}else{$('#bttop').fadeOut();}});$('#bttop').click(function(){$('body,html').animate({scrollTop:0},800);});});</script>